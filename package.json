{
  "name": "discord-self-destruct-api",
  "version": "1.0.0",
  "description": "A backend / API service for the Discord self-destruct tool that runs on the server and interacts with the clients.",
  "type": "module",
  "main": "dist/app.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/app.js",
    "start:prod": "pnpm build && node dist/app.js",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:seed": "ts-node -r tsconfig-paths/register prisma/seed.ts",
    "db:studio": "prisma studio",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "format": "biome format --write src/",
    "check": "biome check src/",
    "check:fix": "biome check --write src/",
    "worker": "ts-node -r tsconfig-paths/register src/workers/deletionWorker.ts",
    "dev:worker": "nodemon --exec \"ts-node -r tsconfig-paths/register src/workers/deletionWorker.ts\"",
    "clean": "rm -rf dist",
    "prebuild": "pnpm clean"
  },
  "keywords": [
    "discord",
    "self-destruct",
    "auto-delete",
    "api",
    "backend",
    "prisma",
    "express",
    "typescript",
    "privacy",
    "gdpr"
  ],
  "author": {
    "name": "vb2007",
    "email": "admin@vb2007.hu",
    "url": "https://vb2007.hu"
  },
  "license": "AGPL-3.0-only",
  "packageManager": "pnpm@10.28.2",
  "dependencies": {
    "@prisma/client": "^7.4.0",
    "axios": "^1.13.5",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.6",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.1",
    "node-cron": "^4.2.1",
    "prisma": "^7.4.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.0",
    "@types/cors": "^2.8.19",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^25.2.3",
    "@types/supertest": "^6.0.3",
    "concurrently": "^9.2.1",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.8.1",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
